@model AlunoInputModel;
@{
    ViewData["Title"] = "Matricula de aluno";
}

<h1>Fale Conosco</h1>

<form asp-action="Index" method="post">
    <div class="row">
        <p>Nome: </p>
        <input asp-for="Nome" name="Nome" type="text" />
        <span asp-validation-for="Nome" class="text-danger"></span>

        <p>E-mail: </p>
        <input asp-for="Email" name="Email" type="email" />
        <span asp-validation-for="Email" class="text-danger"></span>

        <p>Telefone: </p>
        <input asp-for="Telefone" name="Telefone" type="tel"/>
        <span asp-validation-for="Telefone" class="text-danger"></span>

        <input type="submit" value="Enviar" />
    </div>
</form>